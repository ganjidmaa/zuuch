<odoo>
  <data>
      <record id="view_res_company_form_broker_inherit" model="ir.ui.view">
          <field name="name">view_res_company_form_broker_inherit</field>
          <field name="model">res.company</field>
          <field name="inherit_id" ref="base.view_company_form"/>
          <field name="arch" type="xml">
              <xpath expr="//page[1]" position="after">
                  <page string="Даатгалын мэдээлэл">
                    <group>
                        <group>
                          <field name="stamp" widget="image" class="oe_avatar" modifiers="{}"/>
                          <field name="signature" widget="image" class="oe_avatar" modifiers="{}"/>
                        </group>
                    </group>
                  </page>
              </xpath>
          </field>
      </record>
  </data>
</odoo>
